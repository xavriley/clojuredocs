			if(e.ctrlKey && e.which == 13) {
				$(".search form").append("<input type='hidden' name='feeling_lucky' value='true' />")
			}
		})
			
		$(document).keydown(function(e) {
			if(e.ctrlKey && (e.which == 83)) {
				$('#main_search').focus()
			}
			
			e.stopPropagation();
		})
	})
